<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Theme.FloatActivity" parent="android:style/Theme.Dialog">
        
        <item name="android:windowBackground">@drawable/koi_shadow_box</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        
    </style>
    
    <style name="koi_edittext_account">
        <item name="android:background">@drawable/koi_phone_register_step1_shape</item>
        <item name="android:textColorHint">@color/koi_hint_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">16</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="koi_edittext_pwd">
        <item name="android:background">@drawable/koi_phone_register_step1_shape</item>
        <item name="android:textColorHint">@color/koi_hint_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">12</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="koi_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@drawable/koi_float_box</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>

</resources>
