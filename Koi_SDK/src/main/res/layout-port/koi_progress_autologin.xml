<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <koigame.sdk.view.progress.CircleProgressView
        android:id="@+id/koi_define_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />
    <TextView
        android:id="@+id/koi_define_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/koi_dialog_tips"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/koi_switch_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:textColor="@color/koi_bg_blue"
        android:text="@string/koi_system_switch_account"
        />

</LinearLayout>